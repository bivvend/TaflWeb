
@{
    Layout = "_Layout";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/js/client.js")"></script>
    <title>Board</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1>Game Board</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <canvas id="boardImage" width="600" height="600"></canvas>
            </div>
            <div class="col-sm">
                <div>
                    <ul>
                        <li id="clickColumn">Column:</li>
                        <li id="clickRow">Row:</li>
                    </ul>
                </div>
                <div>
                    <ul>
                        <li id="turnStatus">Turn State:</li>
                        <li id="responseLabel">Response:</li>
                    </ul>
                    <input type="checkbox" id="checkBoxAttackerIsAI">Attacker Is AI?<br>
                    <input type="checkbox" id="checkBoxDefenderIsAI">Defender Is AI?<br>
                    <button class="button btn-sm btn-primary" id="resetButton">Reset</button>
                </div>
                <div>
                    <ul id="moveList"></ul>
                </div>
            </div>

        </div>
    </div>

</body>

